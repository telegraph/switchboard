pipeline {
  agent any

  tools {
    nodejs 'NodeJS-12.16'
  }

  stages {
    stage('Install and clean') {
      steps {
        sh '''
          cd ${WORKSPACE}/server
          npm ci
          npm run clean
        '''
      }
    }

    stage('Code quality') {
      steps {
        sh '''
          cd ${WORKSPACE}/server
          npm run lint
          npm test
        '''
      }
    }
  }
}
